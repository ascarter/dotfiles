// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "theme": {
    "mode": "system",
    "light": "Xcode Default Light",
    "dark": "Github Dark Dimmed"
  },
  "ui_font_family": "SF Pro Display",
  "ui_font_fallbacks": ["SF Pro Display", "SST", "Open Sans"],
  "ui_font_size": 15,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_fallbacks": ["SF Mono", "Noto Mono", "Roboto Mono", "Cascadia"],
  "buffer_font_size": 13,
  "buffer_line_height": "standard",
  "indent_guides": {
    "enabled": false
  },
  "wrap_guides": [80],
  // "vim_mode": true,
  "tabs": {
    "close_position": "left",
    "git_status": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "auto_fold_dirs": false
  },
  "terminal": {
    "line_height": "standard"
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "standardrb", "!solargraph", "!rubocop"],
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Rust": {
      "wrap_guides": [100]
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "formatter": "standard",
        "linters": ["standard"]
      },
      "standardrb": {
        "initialization_options": {
          "enabledFeatures": {
            "diagnostics": true,
            "formatting": true
          }
        }
      }
    }
  },
  "debugger": {
    "log_dap_communications": true,
    "format_dap_log_messages": true
  }
}
