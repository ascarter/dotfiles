// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "language_models": {
    "ollama": {
      "low_speed_timeout_in_seconds": 30
      // "api_url": "http://whistler:11434"
    }
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "theme": {
    "mode": "system",
    "light": "Xcode Default",
    "dark": "Xcode Default Dark"
  },
  "ui_font_family": "SF Pro Display",
  "ui_font_size": 13,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 12,
  "buffer_line_height": "standard",
  "indent_guides": {
    "enabled": false
  },
  "wrap_guides": [80],
  "tabs": {
    "close_position": "left",
    "git_status": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "auto_fold_dirs": false
  },
  "terminal": {
    "line_height": "standard"
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "standardrb", "!solargraph", "!rubocop"],
      "formatter": "language_server",
      "format_on_save": "on"
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "formatter": "standard",
        "linters": ["standard"]
      },
      "standardrb": {
        "initialization_options": {
          "enabledFeatures": {
            "diagnostics": true,
            "formatting": true
          }
        }
      }
    }
  }
}
