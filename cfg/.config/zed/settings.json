// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-7-sonnet"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "theme": {
    "mode": "system",
    "light": "Xcode Default Light",
    "dark": "Xcode Default Dark"
  },
  "ui_font_family": ".SystemUIFont",
  "buffer_font_family": "Berkeley Mono",
  "active_pane_modifiers": {
    "border_size": 0.5,
    "inactive_opacity": 0.5
  },
  "indent_guides": {
    "enabled": false
  },
  "wrap_guides": [80],
  // "vim_mode": true,
  "tabs": {
    "close_position": "left",
    "git_status": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "project_panel": {
    "auto_fold_dirs": false
  },
  "outline_panel": {
    "auto_fold_dirs": false
  },
  "terminal": {
    "line_height": "standard",
    "font_size": 13
  },
  "auto_install_extensions": {
    "docker-compose": true,
    "dockerfile": true,
    "github-theme": true,
    "lua": true,
    "macos-classic": true,
    "make": true,
    "marksman": true,
    "postgres-context-server": true,
    "roc": true,
    "ruby": true,
    "sql": true,
    "swift": true,
    "toml": true,
    "xcode-themes": true,
    "zig": true
  },
  "languages": {
    "Ruby": {
      "language_servers": [
        "ruby-lsp",
        "standardrb",
        "tailwindcss-language-server",
        "!solargraph",
        "!rubocop"
      ],
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Rust": {
      "wrap_guides": [100]
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "experimentalFeaturesEnabled": true,
        "formatter": "standard",
        "linters": ["standard"],
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "featuresConfiguration": {
          "inlayHint": {
            "implicitHashValue": true,
            "implicitRescue": true
          }
        }
      }
    },
    "standardrb": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": true,
          "formatting": false
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includedLanguages": {
          "erb": "html",
          "ruby": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  },
  "debugger": {
    "log_dap_communications": true,
    "format_dap_log_messages": true
  }
}
